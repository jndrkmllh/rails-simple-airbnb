<div class="container mx-auto mt-4">
<h1>All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-md-4 my-3">
          <div class="card" style="width: 18rem;">
            <img src="https://loremflickr.com/300/150/apartement" class="card-img-top" alt="nice flat">
            <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text"><%= flat.description %></p>
              <div class="d-flex">
                <div class="d-flex align-items-center"><i class="fa-solid fa-people-group me-1"></i> <%= flat.number_of_guests %></div>
                <div class="d-flex align-items-center ms-3"><i class="fa-solid fa-euro-sign me-1"></i> <%= flat.price_per_night %></div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
